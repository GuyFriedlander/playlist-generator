{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*",
    "src/types/**/*"
  ],
  "typeRoots": [
    "node_modules/@types",
    "src/types"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "client"
  ]
} 